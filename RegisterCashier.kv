<RegisterCashier>
    FloatLayout:
        size:root.width, root.height
        MDBoxLayout:
            orientation: "horizontal"
            padding: 25
            spacing: 25
            size:root.width*0.9, root.height*0.9
            size_hint: None, None
            pos_hint: {'center_x': 0.7, 'center_y': 0.5}
            MDCard:
                size_hint: None, None
                size: 300,400
                pos_hint: {'center_x': 0.1, 'center_y': 0.5}
                elevation: 1
                padding: 25
                spacing: 25
                orientation: 'vertical'
                MDLabel:
                    text: 'додати касира'
                MDTextField:
                    id: user
                    hint_text: "ім'я касира"
                    size_hint_x: None
                    required: True
                    width: 200
                    icon_right: "account"
                    font_size: 18
                    padding: 25
                    pos_hint: {'center_x': .5}
                MDTextField:
                    id: password
                    hint_text: "password"
                    password:True
                    required: True
                    size_hint_x: None
                    width: 200
                    icon_right: "key"
                    font_size: 18
                    padding: 25
                    pos_hint: {'center_x': .5}
                MDRoundFlatButton:
                    text: "додати"
                    font_size: 16
                    pos_hint: {'center_x': .5}
                    on_press: root.register_cashier()
            MDCard:
                size_hint: None, None
                size: 300,400
                pos_hint: {'center_x': 0.7, 'center_y': 0.5}
                elevation: 1
                padding: 25
                spacing: 25
                orientation: 'vertical'
                MDLabel:
                    text: 'видалити касира'
                MDTextField:
                    id: remove_user_name
                    hint_text: "ім'я"
                    size_hint_x: None
                    required: True
                    width: 200
                    icon_right: "account"
                    font_size: 18
                    padding: 25
                    pos_hint: {'center_x': .5}
                MDRoundFlatButton:
                    text: "видалити"
                    font_size: 16
                    pos_hint: {'center_x': .5}
                    on_press: root.delete_cashier()
