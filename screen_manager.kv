#: import NoTransition kivy.uix.screenmanager.NoTransition
WindowManager:
    LoginWindow:
        name:"login"
    ScanWindow:
        name: "main"
    CatalogWindow:
        name:"catalogue"
    ManufacturerWindow:
        name:"manufacturer"
    SupplierWindow:
        name:"supplier"
    CategoryWindow:
        name:"category"
    RegisterCashierWindow:
        name:"register_cashier"
    InvoiceWindow:
        name:"invoice"
    Menu:
        name:"menu"

<WindowManager>:
    transition: NoTransition()

<CatalogWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        Menu:
            size_hint_y: 0.1
        ProductList:
            id:ProductList
            size_hint_y: 0.9

<ManufacturerWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        Menu:
            size_hint_y: 0.1
        ManufacturerList:
            id:ManufacturerList
            size_hint_y: 0.9

<SupplierWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        Menu:
            size_hint_y: 0.1
        SupplierList:
            id:SupplierList
            size_hint_y: 0.9
<CategoryWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        Menu:
            size_hint_y: 0.1
        CategoryList:
            id:CategoryList
            size_hint_y: 0.9


<InvoiceWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        Menu:
            size_hint_y: 0.1
        InvoiceList:

<RegisterCashierWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        Menu:
            size_hint_y: 0.1
        RegisterCashier:

<LoginWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint_y: 1
        MyMDLog:


<ScanWindow>:
    MDBoxLayout:
        orientation: "vertical"
        size_hint: 1, 1
        Menu:
            size_hint: 1, 0.1
        CashRegister:
            size_hint: 1, 0.9


<Menu>:
    MDTopAppBar:
        id: app_bar
        title: "Auto cashier"
        anchor_title: "left"
        right_action_items: 
            [
            ["menu", lambda x: root.get_menu_items(), "menu"],
            ]


