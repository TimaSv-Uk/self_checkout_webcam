<ProductList>:

    size:root.width, root.height

    MDBoxLayout:
        id:product_list
        size:root.width, root.height
        orientation: "vertical"
        size_hint: 1, 1

        MDBoxLayout:
            orientation: "horizontal"

            size_hint: 1, 0.1
            MDRoundFlatButton:
                text:"add new product"
                on_press: root.open_new_product_form()

            MDRoundFlatButton:
                text:"open product list"
                on_press: root.open_product_list()
        MDBoxLayout:
            id:qr_code_field
            orientation: "vertical"

            size_hint: 1, 0.1
            MDLabel:
                text:"cklick on products SKU in table to get qr code"
