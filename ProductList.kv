<ProductList>:
    size:root.width, root.height
    MDBoxLayout:
        id:product_list
        size:root.width, root.height
        orientation: "vertical"
        size_hint: 1, 1
        spacing: 5
        MDBoxLayout:
            id:product_form
            orientation: "horizontal"
            size_hint: 1, 0.1

        MDBoxLayout:
            id:qr_code_field
            orientation: "vertical"

            size_hint: 1, 0.1
            MDLabel:
                text:"cklick on products SKU in table to get qr code"
        
